<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Agent Portal</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --sidebar-width: 260px;
            --primary-navy: #001f3d;
            --agent-gold: #f4b740;
            --bg-body: #f8fafc;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body);
            color: #334155;
            margin: 0;
            overflow-x: hidden;
        }

        /* Sidebar Styling */
        .sidebar {
            width: var(--sidebar-width);
            background: #ffffff;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            border-right: 1px solid #e2e8f0;
            display: flex;
            flex-direction: column;
            z-index: 1050;
            transition: var(--transition);
        }

        .brand-section {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 12px;
            border-bottom: 1px solid #f1f5f9;
        }

        .brand-logo {
            width: 35px;
            height: 35px;
            background: var(--primary-navy);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--agent-gold);
            font-size: 1.2rem;
        }

        .nav-menu {
            padding: 1.5rem 1rem;
            flex-grow: 1;
        }

        .nav-link-custom {
            display: flex;
            align-items: center;
            gap: 12px;
            color: #64748b;
            text-decoration: none;
            padding: 0.8rem 1rem;
            border-radius: 10px;
            margin-bottom: 5px;
            font-weight: 500;
            transition: var(--transition);
        }

            .nav-link-custom:hover {
                background: #f1f5f9;
                color: var(--primary-navy);
            }

            .nav-link-custom.active {
                background: #fffbeb;
                color: #b45309;
                border-left: 4px solid var(--agent-gold);
                border-radius: 4px 10px 10px 4px;
            }

        .main-content {
            margin-left: var(--sidebar-width);
            transition: var(--transition);
            min-height: 100vh;
        }

        .top-navbar {
            background: #ffffff;
            height: 70px;
            padding: 0 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #e2e8f0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .agent-badge {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 5px 15px;
            background: #fffbeb;
            border: 1px solid #fde68a;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            color: #b45309;
        }

        .btn-signout-link {
            color: #ef4444;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 1.2rem;
            border-top: 1px solid #f1f5f9;
            transition: background 0.2s;
            cursor: pointer;
            background: none;
            border: none;
            width: 100%;
            text-align: left;
        }

            .btn-signout-link:hover {
                background: #fff1f2;
            }

        /* Mobile Overlay */
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.4);
            z-index: 1040;
        }

            .overlay.show {
                display: block;
            }

        /* FIX: Using @@ to escape Razor syntax for media queries */
        @@media (max-width: 992px) {
            .sidebar {
                left: -100%;
            }

                .sidebar.show {
                    left: 0;
                }

            .main-content {
                margin-left: 0;
            }

            .hamburger-btn {
                display: block;
            }
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <div class="overlay" id="sidebarOverlay"></div>

    <aside class="sidebar shadow-sm" id="sidebarMenu">
        <div class="brand-section">
            <div class="brand-logo">
                <i class="bi bi-person-badge-fill"></i>
            </div>
            <span class="fw-bold fs-5 text-dark">Agent Portal</span>
        </div>

        <nav class="nav-menu">
            <small class="text-uppercase text-muted fw-bold mb-2 d-block" style="font-size: 0.7rem; letter-spacing: 1px;">Management</small>

            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
               asp-controller="Agent" asp-action="Dashboard">
                <i class="bi bi-grid-1x2"></i> <span>Dashboard</span>
            </a>

            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"]?.ToString() == "Policies" ? "active" : "")"
               asp-controller="Agent" asp-action="Policies">
                <i class="bi bi-shield-lock"></i> <span>Policies</span>
            </a>

            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"]?.ToString() == "Claims" ? "active" : "")"
               asp-controller="Agent" asp-action="Claims">
                <i class="bi bi-journal-check"></i> <span>Claims</span>
            </a>

            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"]?.ToString() == "Payments" ? "active" : "")"
               asp-controller="Agent" asp-action="Payments">
                <i class="bi bi-credit-card"></i> <span>Payments</span>
            </a>

            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"]?.ToString() == "SupportTickets" ? "active" : "")"
               asp-controller="Agent" asp-action="SupportTickets">
                <i class="bi bi-headset"></i> <span>Support Tickets</span>
            </a>
        </nav>

        <form asp-controller="Agent" asp-action="Logout" method="post" id="logoutForm" style="display:none;">
            @Html.AntiForgeryToken()
        </form>

        <button type="button" class="btn-signout-link" id="btnLogout">
            <i class="bi bi-box-arrow-left"></i> <span>Sign Out</span>
        </button>
    </aside>

    <div class="main-content">
        <header class="top-navbar shadow-sm">
            <button class="btn btn-light d-lg-none" id="menuToggle">
                <i class="bi bi-list fs-3"></i>
            </button>

            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="agent-badge">
                    <i class="bi bi-patch-check-fill"></i>
                    <span>@User.Identity?.Name</span>
                </div>
            </div>
        </header>

        <div class="p-4">
            @RenderBody()
        </div>
    </div>

    <div class="modal fade" id="logoutModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-muted">
                    Are you sure you want to log out? This will clear your current session.
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger px-4" id="confirmLogoutBtn">Logout</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Sidebar Toggle Logic
            $('#menuToggle, #sidebarOverlay').on('click', function () {
                $('#sidebarMenu').toggleClass('show');
                $('#sidebarOverlay').toggleClass('show');
            });

            // Open Logout Modal
            $('#btnLogout').on('click', function () {
                var myModal = new bootstrap.Modal(document.getElementById('logoutModal'));
                myModal.show();
            });

            // Handle Logout Confirmation
            $('#confirmLogoutBtn').on('click', function () {
                localStorage.clear();
                sessionStorage.clear();
                $('#logoutForm').submit();
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
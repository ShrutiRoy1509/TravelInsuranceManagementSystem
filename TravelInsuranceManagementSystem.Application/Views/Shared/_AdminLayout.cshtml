<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme (ColorHunt palette) + minimal styles -->
    <style>
        :root {
            --navy: #0E2A47; /* dark navy */
            --orange: #E79045; /* orange */
            --peach: #F3B77A; /* peach */
            --gray: #E6E6E6; /* light gray */

            --bg: #f9fafb; /* soft page bg */
            --text: #111827; /* dark text */
        }

        body {
            background: var(--bg);
            color: var(--text);
        }

        .sidebar {
            min-height: 100vh;
            border-right: 1px solid var(--gray);
            background: #fff;
        }

        .nav-link {
            color: var(--navy);
            border-radius: 10px;
        }

            .nav-link:hover {
                background: var(--gray);
            }

            .nav-link.active {
                background: linear-gradient(180deg, var(--peach), var(--orange));
                color: #1b1b1b;
                font-weight: 600;
            }

        .topbar {
            background: #fff;
            border-bottom: 1px solid var(--gray);
        }

        .avatar {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            background: var(--navy);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
        }

        .table-responsive {
            border: 1px solid var(--gray);
            border-radius: 12px;
            overflow: auto;
        }

        .card {
            border: 1px solid var(--gray);
            border-radius: 12px;
        }

        .table thead th {
            background: #f3f4f6;
        }

        .badge-pill {
            padding: 4px 10px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 12px;
            display: inline-block;
        }

        .badge-open {
            color: var(--navy);
            background: rgba(14,42,71,.10);
            border: 1px solid rgba(14,42,71,.30);
        }

        .badge-approved {
            color: #1f2937;
            background: rgba(243,183,122,.28);
            border: 1px solid rgba(243,183,122,.55);
        }
        /* peach */
        .badge-pending {
            color: #1f2937;
            background: rgba(231,144,69,.25);
            border: 1px solid rgba(231,144,69,.55);
        }
        /* orange */
        .badge-rejected {
            color: #fff;
            background: var(--orange);
            border: 1px solid rgba(231,144,69,.85);
        }

        .btn-primary {
            background: var(--navy);
            border-color: var(--navy);
        }

            .btn-primary:hover {
                background: #0b2138;
                border-color: #0b2138;
            }

        .btn-outline-primary {
            color: var(--navy);
            border-color: var(--navy);
        }

            .btn-outline-primary:hover {
                background: var(--navy);
                color: #fff;
            }

       
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-12 col-md-3 col-lg-2 p-3 sidebar">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar me-2">SJ</div>
                    <strong style="color:var(--navy)">Admin</strong>
                </div>
                <nav class="nav flex-column">
                    <a href="/Admin/Dashboard" class="nav-link js-nav">📊 Dashboard</a>
                    <a href="/Admin/Policies" class="nav-link js-nav">📄 Policies</a>
                    <a href="/Admin/Claims" class="nav-link js-nav">🧾 Claims</a>
                    <a href="/Admin/Payments" class="nav-link js-nav">💳 Payments</a>
                </nav>
            </aside>

            <!-- Main -->
            <main class="col-12 col-md-9 col-lg-10 p-0">
                <header class="topbar d-flex align-items-center justify-content-between px-3 py-2">
                    <div class="fw-semibold" style="color:var(--navy)">@ViewData["Title"]</div>
                    <div class="avatar">SJ</div>
                </header>

                <section class="p-3">
                    @RenderBody()
                </section>
            </main>
        </div>
    </div>

    <!-- jQuery + Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Shared minimal JS: nav highlight + search/filter/export + policies filters -->
    <script>
        // Highlight active nav
        (function(){
          const path = location.pathname.toLowerCase();
          document.querySelectorAll('.js-nav').forEach(a=>{
            const href = a.getAttribute('href')?.toLowerCase() || '';
            if (path.includes(href)) a.classList.add('active');
          });
        })();

        // Helpers
        function textMatch(h, n){ return h.toLowerCase().includes((n||'').toLowerCase()); }
        function toCSV($table){
          const lines=[], head=[];
          $table.find('thead th').each(function(){ head.push($(this).text().trim()); });
          lines.push(head.join(','));
          $table.find('tbody tr:visible').each(function(){
            const cols=[];
            $(this).children('td').each(function(){ cols.push($(this).text().trim().replace(/\s+/g,' ')); });
            lines.push(cols.join(','));
          });
          return lines.join('\n');
        }
        function downloadCSV(content, name){
          const blob = new Blob([content], {type:'text/csv;charset=utf-8;'});
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a'); a.href = url; a.download = name;
          document.body.appendChild(a); a.click(); document.body.removeChild(a);
        }

        // Generic wires
        function wireSearch(inputSel, tableSel){
          const $i = $(inputSel), $t = $(tableSel);
          $i.on('input', function(){
            const q = $(this).val().trim();
            $t.find('tbody tr').each(function(){
              const tt = $(this).text();
              $(this).toggle(textMatch(tt, q) || q.length===0);
            });
          });
        }
        function wireStatusButtons(btnSel, tableSel){
          const $b = $(btnSel), $t = $(tableSel);
          $b.on('click', function(){
            const status = $(this).data('status');
            $b.removeClass('active'); $(this).addClass('active');
            $t.find('tbody tr').each(function(){
              const st = String($(this).data('status')||'');
              const show = (status==='All') || (st.toLowerCase() === String(status).toLowerCase());
              $(this).toggle(show);
            });
          });
        }
        function wireExport(btnSel, tableSel, name){
          $(btnSel).on('click', function(){
            const csv = toCSV($(tableSel));
            downloadCSV(csv, name);
          });
        }
        function wirePolicyFilters(){
          const $t = $('#policyTable');
          function apply(){
            const st = String($('#policyStatus').val()||'All').toLowerCase();
            const co = String($('#policyCountry').val()||'All').toLowerCase();
            const cv = String($('#policyCoverage').val()||'All').toLowerCase();
            $t.find('tbody tr').each(function(){
              const rs = String($(this).data('status')||'').toLowerCase();
              const rc = String($(this).data('country')||'').toLowerCase();
              const rv = String($(this).data('coverage')||'').toLowerCase();
              const ok = ((st==='all'||rs===st) && (co==='all'||rc===co) && (cv==='all'||rv.includes(cv)));
              $(this).toggle(ok);
            });
          }
          $('#policyApply').on('click', apply);
          $('#policyStatus,#policyCountry,#policyCoverage').on('change', apply);
        }

        // Page bootstrap
        $(function(){
          if ($('#dashboardTable').length){
            wireSearch('#dashboardSearch','#dashboardTable');
            wireStatusButtons('.status-btn','#dashboardTable');
            wireExport('#exportDashboard','#dashboardTable','dashboard.csv');
          }
          if ($('#policyTable').length){ wirePolicyFilters(); }
          if ($('#claimsTable').length){
            wireSearch('#claimsSearch','#claimsTable');
            wireStatusButtons('.claims-status-btn','#claimsTable');
            wireExport('#exportClaims','#claimsTable','claims.csv');
          }
          if ($('#paymentsTable').length){
            wireSearch('#paymentsSearch','#paymentsTable');
            wireStatusButtons('.payments-status-btn','#paymentsTable');
            wireExport('#exportPayments','#paymentsTable','payments.csv');
          }
        });
    </script>
</body>
</html>


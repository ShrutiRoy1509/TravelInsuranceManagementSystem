@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --navy: #0E2A47;
            --orange: #E79045;
            --peach: #F3B77A;
            --gray: #E6E6E6;
            --bg: #f9fafb;
            --text: #111827;
        }

        body {
            background: var(--bg);
            color: var(--text);
            margin: 0;
            overflow-x: hidden;
        }

        .sidebar-container {
            background: #fff;
            border-right: 1px solid var(--gray);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .nav-link {
            color: var(--navy);
            border-radius: 10px;
            margin-bottom: 5px;
            padding: 12px 15px;
            transition: all 0.2s ease;
            text-decoration: none;
            display: block;
        }

            .nav-link:hover {
                background: var(--gray);
                color: var(--navy);
            }

            .nav-link.active {
                background: linear-gradient(180deg, var(--peach), var(--orange));
                color: #1b1b1b;
                font-weight: 600;
            }

        .topbar {
            background: #fff;
            border-bottom: 1px solid var(--gray);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .avatar {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            background: var(--navy);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
        }

        .main-section {
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <aside class="col-12 col-lg-2 sidebar-container p-3">
                <div class="d-flex align-items-center mb-4">
                    <div class="avatar me-2">AD</div>
                    <strong style="color:var(--navy)">Admin Portal</strong>
                </div>

                <nav class="nav flex-column flex-grow-1">
                    <a href="/Admin/Dashboard" class="nav-link js-nav">📊 Dashboard</a>
                    <a href="/Admin/Policies" class="nav-link js-nav">📄 Policies</a>
                    <a href="/Admin/Claims" class="nav-link js-nav">🧾 Claims</a>
                    <a href="/Admin/Payments" class="nav-link js-nav">💳 Payments</a>
                </nav>

                <div class="mt-auto pt-3 border-top">
                    <form asp-controller="Admin" asp-action="Logout" method="post" id="adminLogoutForm" style="display:none;">
                        @Html.AntiForgeryToken()
                    </form>

                    <a href="javascript:void(0)" id="adminLogoutBtn" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </aside>

            <main class="col-12 col-lg-10 main-section">
                <header class="topbar d-flex align-items-center justify-content-between px-4 py-3">
                    <div class="fw-semibold text-uppercase small tracking-wider" style="color:var(--navy)">
                        @ViewData["Title"]
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        <span class="text-muted small d-none d-md-inline">@User.Identity?.Name</span>
                        
                    </div>
                </header>

                <section class="p-4">
                    @RenderBody()
                </section>
            </main>
        </div>
    </div>

    <div class="modal fade" id="adminLogoutModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body py-4 text-dark">
                    Are you sure you want to end your administrative session?
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="confirmAdminLogout" class="btn btn-primary" style="background: var(--navy); border:none;">
                        Logout
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(function () {
            // 1. Highlight the current page link
            const path = location.pathname.toLowerCase();
            $('.js-nav').each(function() {
                const href = $(this).attr('href').toLowerCase();
                if (path.includes(href) && href !== "/") {
                    $(this).addClass('active');
                }
            });

            // 2. Show Modal when clicking Logout link
            $('#adminLogoutBtn').on('click', function (e) {
                e.preventDefault();
                var logoutModal = new bootstrap.Modal(document.getElementById('adminLogoutModal'));
                logoutModal.show();
            });

            // 3. Submit the hidden form after confirmation
            $('#confirmAdminLogout').on('click', function () {
                $(this).prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Logging out...');

                // Clear local caches
                localStorage.clear();
                sessionStorage.clear();

                // Submit the actual POST form
                $('#adminLogoutForm').submit();
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
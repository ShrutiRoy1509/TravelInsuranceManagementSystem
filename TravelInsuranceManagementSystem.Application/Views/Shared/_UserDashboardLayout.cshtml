<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Travel Buddy</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --sidebar-width: 260px;
            --primary-navy: #001f3d;
            --accent-peach: #f7b980;
            --bg-body: #f8fafc;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body);
            color: #334155;
            margin: 0;
            overflow-x: hidden;
        }

        /* Sidebar Styling */
        .sidebar {
            width: var(--sidebar-width);
            background: #ffffff;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            border-right: 1px solid #e2e8f0;
            display: flex;
            flex-direction: column;
            z-index: 1050;
            transition: var(--transition);
        }

        /* Brand Styling */
        .brand-section {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 12px;
            border-bottom: 1px solid #f1f5f9;
        }

        .brand-logo {
            width: 35px;
            height: 35px;
            background: linear-gradient(135deg, #f7b980, #ed985f);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
        }

        /* Nav Menu */
        .nav-menu {
            padding: 1.5rem 1rem;
            flex-grow: 1;
        }

        .nav-link-custom {
            display: flex;
            align-items: center;
            gap: 12px;
            color: #64748b;
            text-decoration: none;
            padding: 0.8rem 1rem;
            border-radius: 10px;
            margin-bottom: 5px;
            font-weight: 500;
            transition: var(--transition);
        }

            .nav-link-custom:hover {
                background: #f1f5f9;
                color: var(--primary-navy);
            }

            .nav-link-custom.active {
                background: #eff6ff;
                color: #2563eb;
                border-left: 4px solid #2563eb;
                border-radius: 4px 10px 10px 4px;
            }

        /* Main Content wrapper */
        .main-content {
            margin-left: var(--sidebar-width);
            transition: var(--transition);
            min-height: 100vh;
        }

        /* Top Header */
        .top-navbar {
            background: #ffffff;
            height: 70px;
            padding: 0 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #e2e8f0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .hamburger-btn {
            display: none;
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--primary-navy);
            cursor: pointer;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 5px 15px;
            background: #f8fafc;
            border-radius: 50px;
            border: 1px solid #e2e8f0;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .btn-signout {
            color: #ef4444;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 5px;
            padding: 1rem;
            border-top: 1px solid #f1f5f9;
        }

        /* Mobile Responsiveness */
        @@media (max-width: 992px) {
            .sidebar {
                left: -100%; /* Hide sidebar */
            }

                .sidebar.show {
                    left: 0; /* Show sidebar */
                }

            .main-content {
                margin-left: 0;
            }

            .hamburger-btn {
                display: block;
            }

            .overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.3);
                z-index: 1040;
            }

                .overlay.show {
                    display: block;
                }
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>

    <div class="overlay" id="sidebarOverlay"></div>

    <aside class="sidebar shadow-sm" id="sidebarMenu">
        <div class="brand-section">
            <div class="brand-logo">
                <i class="bi bi-airplane-fill"></i>
            </div>
            <span class="fw-bold fs-5 text-dark">Travel Buddy</span>
        </div>

        <nav class="nav-menu">
            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"].ToString() == "Claims" ? "active" : "")"
               asp-controller="UserDashboard" asp-action="Claims">
                <i class="bi bi-file-text"></i> <span>Claims</span>
            </a>

            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"].ToString() == "Policies" ? "active" : "")"
               asp-controller="UserDashboard" asp-action="Policies">
                <i class="bi bi-shield-check"></i> <span>Policies</span>
            </a>

            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"].ToString() == "RaiseTicket" ? "active" : "")"
               asp-controller="UserDashboard" asp-action="RaiseTicket">
                <i class="bi bi-chat-dots"></i> <span>Raise Ticket</span>
            </a>
        </nav>

        <a href="javascript:void(0);" class="btn-signout btn-logout">
            <i class="bi bi-box-arrow-left"></i> <span>Sign Out</span>
        </a>
    </aside>

    <main class="main-content">
        <header class="top-navbar">
            <button class="hamburger-btn" id="menuToggle">
                <i class="bi bi-list"></i>
            </button>

            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="user-profile d-none d-md-flex">
                    <i class="bi bi-person-circle text-primary"></i>
                    <span id="userEmailDisplay">User</span>
                </div>
            </div>
        </header>

        <div class="p-4">
            @RenderBody()
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Sidebar Toggle Logic
            const $sidebar = $('#sidebarMenu');
            const $overlay = $('#sidebarOverlay');

            $('#menuToggle, #sidebarOverlay').on('click', function () {
                $sidebar.toggleClass('show');
                $overlay.toggleClass('show');
            });

            // Set Email from storage
            const email = localStorage.getItem("userEmail") || "Welcome!";
            $('#userEmailDisplay').text(email);

            // Logout with confirmation
            $('.btn-logout').on('click', function () {
                if (confirm("Are you sure you want to sign out?")) {
                    localStorage.clear();
                    window.location.href = '/Home/Index';
                }
            });

            // Auto-hide sidebar when clicking a link on mobile
            $('.nav-link-custom').on('click', function() {
                if ($(window).width() <= 992) {
                    $sidebar.removeClass('show');
                    $overlay.removeClass('show');
                }
            });

            // Security Check
            if (localStorage.getItem("isLoggedIn") !== "true") {
                window.location.href = '/Home/SignIn';
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Travel Buddy</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --sidebar-width: 260px;
            --primary-navy: #001f3d;
            --bg-body: #f8fafc;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body);
            margin: 0;
            overflow-x: hidden;
        }

        .sidebar {
            width: var(--sidebar-width);
            background: #ffffff;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            border-right: 1px solid #e2e8f0;
            display: flex;
            flex-direction: column;
            z-index: 1050;
        }

        .brand-section {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 12px;
            border-bottom: 1px solid #f1f5f9;
        }

        .nav-menu {
            padding: 1.5rem 1rem;
            flex-grow: 1;
        }

        .nav-link-custom {
            display: flex;
            align-items: center;
            gap: 12px;
            color: #64748b;
            text-decoration: none;
            padding: 0.8rem 1rem;
            border-radius: 10px;
            margin-bottom: 5px;
            font-weight: 500;
        }

            .nav-link-custom.active {
                background: #eff6ff;
                color: #2563eb;
                border-left: 4px solid #2563eb;
            }

        .main-content {
            margin-left: var(--sidebar-width);
            min-height: 100vh;
        }

        .top-navbar {
            background: #ffffff;
            height: 70px;
            padding: 0 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #e2e8f0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 5px 15px;
            background: #f8fafc;
            border-radius: 50px;
            border: 1px solid #e2e8f0;
            font-size: 0.9rem;
        }

        .btn-signout {
            color: #ef4444;
            text-decoration: none;
            font-weight: 600;
            padding: 1rem;
            border-top: 1px solid #f1f5f9;
            cursor: pointer;
        }

        @@media (max-width: 992px) {
            .sidebar {
                left: -100%;
                transition: 0.3s;
            }

                .sidebar.show {
                    left: 0;
                }

            .main-content {
                margin-left: 0;
            }
        }
    </style>

    @* --- FIX: Added this line to render Styles from child views --- *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="overlay" id="sidebarOverlay"></div>

    <aside class="sidebar shadow-sm" id="sidebarMenu">
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
            <div class="brand-section d-flex align-items-center">
                <div class="brand-logo" style="background:orange; padding:5px; border-radius:5px;">
                    <i class="bi bi-airplane-fill text-white"></i>
                </div>
                <span class="fw-bold fs-5 text-dark ms-2">Travel Buddy</span>
            </div>
        </a>

        <nav class="nav-menu">
            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"].ToString() == "Claims" ? "active" : "")" asp-controller="UserDashboard" asp-action="Claims">
                <i class="bi bi-file-text"></i> <span>Claims</span>
            </a>
            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"].ToString() == "Policies" ? "active" : "")" asp-controller="UserDashboard" asp-action="Policies">
                <i class="bi bi-shield-check"></i> <span>Policies</span>
            </a>
            <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"].ToString() == "RaiseTicket" ? "active" : "")" asp-controller="UserDashboard" asp-action="RaiseTicket">
                <i class="bi bi-chat-dots"></i> <span>Raise Ticket</span>
            </a>
        </nav>

        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn-signout d-block">
                <i class="bi bi-box-arrow-left"></i> <span>Sign Out</span>
            </a>
        </form>
    </aside>

    <main class="main-content">
        <header class="top-navbar">
            <button class="btn d-lg-none" id="menuToggle"><i class="bi bi-list fs-3"></i></button>
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="user-profile">
                    <i class="bi bi-person-circle text-primary"></i>
                    <span class="fw-bold">@User.Identity.Name</span>
                </div>
            </div>
        </header>

        <div class="p-4">
            @RenderBody()
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#menuToggle').on('click', function () {
                $('#sidebarMenu').toggleClass('show');
            });
        });
    </script>

    @* --- Use await for better performance in .NET Core --- *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
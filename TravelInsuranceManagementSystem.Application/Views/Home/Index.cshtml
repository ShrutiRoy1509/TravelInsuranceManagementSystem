@{
    ViewData["Title"] = "Home Page";
}

<section class="hero">
    <div class="hero-content container-fluid">
        <div class="row align-items-center g-4">

            <!-- Left: Headline & CTAs -->
            <div class="col-lg-6">
                <span class="badge-soft mb-3">Destination</span>
                <h1>Discover the World with Us</h1>
                <p class="lead mt-3">
                    Explore breathtaking destinations and create unforgettable memories with expertly crafted tours.
                </p>
                <div class="d-flex gap-3 mt-3">
                    <a href="/Home/SignIn" class="btn btn-cta-primary"><i class="bi bi-map me-1"></i> Start Exploring</a>
                    <a href="/Home/SignIn" class="btn btn-cta-secondary">Learn More</a>
                </div>
            </div>

            <!-- Right: Search Card -->
            <div class="col-lg-6">
                <div class="search-card shadow-lg">
                    <div class="mb-3">
                        <h5 class="mb-1">Destination</h5>
                        <input type="text" class="form-control" placeholder="Where do you want to go?" aria-label="Destination">
                    </div>

                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label class="form-label">Check In</label>
                            <input type="date" class="form-control" placeholder="dd-mm-yyyy" aria-label="Check In">
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label">Check Out</label>
                            <input type="date" class="form-control" placeholder="dd-mm-yyyy" aria-label="Check Out">
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-sm-6">
                            <label class="form-label">Adults</label>
                            <input type="number" class="form-control" min="1" value="2" aria-label="Adults">
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label">Children</label>
                            <input type="number" class="form-control" min="0" value="0" aria-label="Children">
                        </div>
                    </div>
                    
                    
                    
                    <div class="d-grid mt-3">
                        
                            <a class="btn btn-search" href="/Home/SignIn">
                            <i class="bi bi-search me-1 text-light"></i> 
                                <span class="text-light">Search Tours</span>
                            </a>
                        
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



@{
    ViewData["Title"] = "Insuarance";
}

@section Styles {
    <!-- Page-specific CSS (kept on this page as requested) -->
    <style>
        body {
            background-image: linear-gradient(rgba(0, 6, 20, 0.55), rgba(0, 6, 20, 0.75)), url('https://images.unsplash.com/photo-1467269204594-9661b134dd2b?q=80&w=1600&auto=format&fit=crop%27'); 
            background-size: cover;
            background-position: center;
            font-family: "Segoe UI", sans-serif;
        }

        
        .btn-primary-custom {
            background-color: #ed985f;
            border: none;
            color: #001f3d;
            font-weight: 600;
        }

            .btn-primary-custom:hover {
                background-color: #f7b980;
            }

        .content-section {
            background-color: #ffffff;
            padding: 60px;
            border-radius: 10px;
            margin-top: 40px;
        }

        .page-title {
            color: #001f3d;
            font-weight: 700;
        }

        .page-text {
            color: #333333;
            line-height: 1.7;
        }

        .illustration-box {
            padding: 20px;
            background-color: #e6e6e6; /* Light gray from your palette */
            border-radius: 12px;
        }

            .illustration-box img {
                max-width: 100%;
                height: auto;
            }

        .footer-text {
            font-size: 13px;
            color: #555;
            margin-top: 20px;
        }

        .feature-table {
            border-collapse: separate;
            border-spacing: 0;
        }

            .feature-table th {
                background-color: #001f3d;
                color: #ffffff;
                padding: 15px;
                font-weight: 600;
            }

            .feature-table td {
                background-color: #f7b980;
                padding: 18px;
                color: #001f3d;
                border-bottom: 6px solid #ffffff;
            }

            .feature-table tbody tr td:first-child {
                width: 35%;
            }

            .feature-table tbody tr:last-child td {
                border-bottom: none;
            }

        .plan-card {
            background-color: #e6e6e6;
            border-radius: 18px;
            padding: 40px 30px;
            height: 100%;
            transition: transform 0.3s ease;
        }

            .plan-card:hover {
                transform: translateY(-5px);
            }

        .plan-illustration {
            background-color: #ffffff;
            height: 160px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #001f3d;
            overflow: hidden;
            font-weight: 600;
        }

            .plan-illustration img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
            }

        .plan-title {
            color: #001f3d;
            font-weight: 700;
            margin-top: 15px;
        }

        .plan-text {
            color: #333;
            font-size: 15px;
            line-height: 1.6;
            margin-top: 15px;
        }

        /* Step Line */
        .step-line {
            position: relative;
            gap: 28px;
        }

            .step-line::before {
                content: "";
                position: absolute;
                top: 10px;
                bottom: 10px;
                width: 2px;
                background-color: #e6e6e6;
            }

        .step-circle {
            width: 34px;
            height: 34px;
            background-color: #001f3d;
            color: #ffffff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            z-index: 1;
        }

        /* Accordion Styling */
        .custom-accordion {
            background-color: #e6e6e6;
            border: none;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .accordion-button {
            background-color: #e6e6e6;
            color: #001f3d;
            font-weight: 600;
            border-radius: 10px;
        }

            .accordion-button:not(.collapsed) {
                background-color: #f7b980;
                color: #001f3d;
            }

            .accordion-button:focus {
                box-shadow: none;
            }

        .accordion-body {
            background-color: #ffffff;
            color: #333;
            border-radius: 0 0 10px 10px;
        }
    </style>
}

<div class="container">
    <div class="content-section">
        <div class="row align-items-center">

            <!-- Text Section -->
            <div class="col-md-6">
                <h2 class="page-title mb-4">Travel Insurance</h2>

                <p class="page-text">
                    Every journey is an experience, whether it is a long-awaited vacation,
                    a business trip or an overseas study plan. But travel can come with surprises.
                    A travel insurance policy provides financial protection against unforeseen events,
                    such as medical emergencies, trip cancellations, lost baggage or delayed flights.
                </p>

                <p class="page-text">
                    No matter where and why you are travelling, choosing the right travel insurance
                    coverage helps you stay prepared for any challenges that may arise along the way.
                    Get covered in just a few clicks with hassle-free online claims and 24x7 global assistance.
                </p>

                <p class="footer-text">
                    *T&amp;C – Should be admitted in Network Hospitals
                </p>
            </div>

            <!-- Illustration Section -->
            <div class="col-md-6 text-center">
                <div class="illustration-box">
                    <!-- Use app-rooted path so Razor resolves correctly -->
                    <img class="img-fluid" src="~/assets/image.png"/>
                </div>
            </div>

        </div>
    </div>
</div>


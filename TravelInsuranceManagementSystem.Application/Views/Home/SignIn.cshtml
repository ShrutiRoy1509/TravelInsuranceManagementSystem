@model TravelInsuranceManagementSystem.Application.Models.User

@{
    ViewData["Title"] = "Sign In / Sign Up";
}

@section Styles {
    <style>
        :root {
            --tb-navy: #001f3d;
            --tb-coral: #ed985f;
            --tb-peach: #f7b980;
            --tb-gray: #e6e6e6;
            --tb-card: #08223f;
            --tb-text: #ffffff;
            --tb-muted: #cfd6df;
            --tb-focus: #f7b980;
        }

        .auth-bg {
            min-height: 100vh;
            background-image: linear-gradient(rgba(0, 6, 20, 0.55), rgba(0, 6, 20, 0.75)), url('https://images.unsplash.com/photo-1467269204594-9661b134dd2b?q=80&w=1600&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            display: grid;
            place-items: center;
            color: var(--tb-text);
        }

        .auth-card {
            background: var(--tb-card);
            color: var(--tb-text);
            border-radius: 16px;
            max-width: 440px;
            width: 100%;
            border: 1px solid rgba(230, 230, 230, 0.12);
            opacity: 0.95;
        }

        .brand-line {
            display: flex;
            align-items: center;
            gap: .75rem;
            justify-content: center;
        }

            .brand-line img {
                height: 44px;
                width: auto;
            }

        .nav-pills .nav-link {
            border-radius: 30px;
            color: var(--tb-text);
            border: 1px solid rgba(230,230,230,.18);
            background: transparent;
            margin: 0 5px;
        }

            .nav-pills .nav-link.active {
                background: var(--tb-coral);
                border-color: var(--tb-coral);
                color: var(--tb-navy);
                font-weight: 600;
            }

        label {
            color: var(--tb-muted);
            margin-bottom: 5px;
        }

        .form-control {
            background-color: rgba(230, 230, 230, 0.15);
            border: 1px solid rgba(230, 230, 230, 0.35);
            color: var(--tb-text);
        }

            .form-control:focus {
                background-color: rgba(230, 230, 230, 0.20);
                border-color: var(--tb-peach);
                color: var(--tb-text);
            }

        .btn-primary {
            background-color: var(--tb-coral);
            border-color: var(--tb-coral);
            color: var(--tb-navy);
            font-weight: 600;
        }

        .btn-success {
            background-color: var(--tb-peach);
            border-color: var(--tb-peach);
            color: var(--tb-navy);
            font-weight: 600;
        }
    </style>
}

<div class="auth-bg">
    <div class="auth-card p-4 shadow">
        <div class="brand-line mb-3">
            <a href="/Home/Index"><img src="~/assets/logo.png" alt="Logo"></a>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger py-2 small text-center" style="background: rgba(255,0,0,0.2); color: white; border: none;">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success py-2 small text-center" style="background: rgba(0,255,0,0.2); color: white; border: none;">
                @TempData["SuccessMessage"]
            </div>
        }

        <ul class="nav nav-pills justify-content-center mb-4" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#signin">Sign In</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="pill" data-bs-target="#signup">Sign Up</button>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="signin">
                <form asp-controller="Account" asp-action="SignIn" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" name="Email" class="form-control" placeholder="you@example.com" required />
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="signinPass" name="Password" required />
                            <button class="btn btn-outline-secondary toggle-pass" type="button" data-target="signinPass">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <div class="text-end mt-1">
                            <a href="/Account/ForgotPassword" class="small text-white-50" style="text-decoration:none;">Forgot Password?</a>
                        </div>
                    </div>
                    <button class="btn btn-primary w-100 py-2" type="submit">Sign In</button>
                </form>
            </div>

            <div class="tab-pane fade" id="signup">
                <form asp-controller="Account" asp-action="SignUp" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="FullName">Full Name</label>
                        <input asp-for="FullName" id="signupName" class="form-control" placeholder="Letters only" required />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password">Password</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" id="signupPass" required />
                            <button class="btn btn-outline-secondary toggle-pass" type="button" data-target="signupPass">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPass" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <button class="btn btn-success w-100 py-2" type="submit">Create Account</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('.toggle-pass').on('click', function () {
                const target = $('#' + $(this).data('target'));
                const icon = $(this).find('i');
                if (target.attr('type') === 'password') {
                    target.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    target.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });
        });
    </script>
}
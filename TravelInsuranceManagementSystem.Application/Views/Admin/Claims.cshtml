            <tr data-status="Approved"><td>P01037</td><td>Premium</td><td>Trip Cancellation</td><td>$2,200</td><td>2023-09-01</td><td><span class="badge-pill badge-approved">Approved</span></td><td>#View</td></tr>
            <tr data-status="Rejected"><td>P01016</td><td>Premium</td><td>Medical</td><td>$3,200</td><td>2024-01-17</td><td><span class="badge-pill badge-rejected">Rejected</span></td><td>#View</td></tr>
        </tbody>
    </table>
</div>

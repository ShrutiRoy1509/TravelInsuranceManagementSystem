@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Policies";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Policies</h2>
    <button class="btn btn-primary">+ Create Policy</button>
</div>

<div class="row g-2 mb-3">
    <div class="col-12 col-sm-6 col-lg-3">
        <select id="policyStatus" class="form-select">
            <option value="All">All Status</option>
            <option value="Active">Active</option>
            <option value="Expired">Expired</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <select id="policyCountry" class="form-select">
            <option value="All">Country</option>
            <option>Italy</option>
            <option>Japan</option>
            <option>Spain</option>
            <option>United Kingdom</option>
            <option>Canada</option>
        </select>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <select id="policyCoverage" class="form-select">
            <option value="All">Coverage Type</option>
            <option>Medical</option>
            <option>Trip Cancellation</option>
            <option>Lost Luggage</option>
        </select>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 d-grid">
        <button id="policyApply" class="btn btn-outline-primary">Apply Filters</button>
    </div>
</div>


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Dashboard</h2>
    <div class="btn-group" role="group">
        <button class="btn btn-outline-primary status-btn active" data-status="All">All</button>
        <button class="btn btn-outline-primary status-btn" data-status="Active">Active</button>
        <button class="btn btn-outline-primary status-btn" data-status="Pending">Pending</button>
        <button class="btn btn-outline-primary status-btn" data-status="Resolved">Resolved</button>
    </div>
</div>

<div class="row g-2 mb-3">
    <div class="col-12 col-md-6">
        <input id="dashboardSearch" class="form-control" placeholder="Search recent activity..." />
    </div>
    <div class="col-12 col-md-6 text-md-end">
        <button id="exportDashboard" class="btn btn-primary">Export CSV</button>
    </div>
</div>

<!-- Simple KPIs -->
<div class="row g-3 mb-3">
    <div class="col-6 col-lg-3"><div class="card p-3"><div class="text-muted small">Active Policies</div><div class="fs-4 fw-bold">132</div></div></div>
    <div class="col-6 col-lg-3"><div class="card p-3"><div class="text-muted small">Open Claims</div><div class="fs-4 fw-bold">7</div></div></div>
    <div class="col-6 col-lg-3"><div class="card p-3"><div class="text-muted small">Payments Today</div><div class="fs-4 fw-bold">₹48,500</div></div></div>
    <div class="col-6 col-lg-3"><div class="card p-3"><div class="text-muted small">Support Tickets</div><div class="fs-4 fw-bold">5</div></div></div>
</div>

<div class="table-responsive">
    <table id="dashboardTable" class="table table-hover align-middle mb-0">
        <thead class="table-light"><tr><th>Type</th><th>Reference</th><th>Customer</th><th>Date</th><th>Status</th></tr></thead>
        <tbody>
            <tr data-status="Active"><td>Policy</td><td>P01842</td><td>Senem</td><td>2025-12-20</td><td><span class="badge-pill badge-approved">Active</span></td></tr>
            <tr data-status="Pending"><td>Claim</td><td>C01016</td><td>Alex</td><td>2025-12-21</td><td><span class="badge-pill badge-pending">Pending</span></td></tr>
            <tr data-status="Resolved"><td>Ticket</td><td>T01900</td><td>Harold</td><td>2025-12-22</td><td><span class="badge-pill badge-open">Resolved</span></td></tr>
        </tbody>
    </table>
</div>


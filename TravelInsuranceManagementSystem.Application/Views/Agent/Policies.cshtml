@model IEnumerable<TravelInsuranceManagementSystem.Application.Models.Policy>

@{
    ViewData["Title"] = "Agent Policies";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

@section Styles {
    <style>
        .search-box {
            max-width: 400px;
            border-radius: 10px;
        }

        /* Table Layout & Spacing */
        .table thead th {
            padding: 1.25rem 1rem;
            white-space: nowrap;
            background-color: #f8fafc;
            color: #475569;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid #e2e8f0;
        }

        .table tbody td {
            padding: 1.5rem 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
        }

        /* Status & Payment Pill Badges */
        .pill-payment {
            display: inline-block;
            padding: 6px 16px;
            border-radius: 50px;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            min-width: 100px;
            text-align: center;
        }

        /* Policy Status Styles */
        .status-active {
            background: #e0f2fe;
            color: #0369a1;
        }

        .status-expired {
            background: #f1f5f9;
            color: #475569;
        }

        .status-cancelled {
            background: #fee2e2;
            color: #b91c1c;
        }

        /* Payment Badge Colors */
        .pill-paid {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .pill-pending {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .pill-overdue {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .policy-id {
            font-weight: 700;
            color: #1e293b;
        }

        .plan-type {
            font-weight: 600;
            color: #2563eb;
        }

        .text-navy {
            color: #001f3d;
        }
    </style>
}

<div class="mb-4">
    <h2 class="fw-bold m-0 text-navy">Policy Management</h2>
    <p class="text-muted">Review active policies and track payment installments.</p>
</div>

<div class="row align-items-center mb-4 g-3">
    <div class="col-md-6">
        <div class="input-group search-box shadow-sm">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
            <input type="text" id="policySearch" class="form-control border-start-0" placeholder="Search by ID, Plan, or Destination...">
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0" id="policyTable">
            <thead>
                <tr>
                    <th class="ps-4">Policy ID</th>
                    <th>Plan Name</th>
                    <th>Destination</th>
                    <th>Premium Amount</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Policy Status</th>
                    <th class="text-center">Payment Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 policy-id">P-@item.PolicyId.ToString("D5")</td>
                            <td class="plan-type">@item.CoverageType</td>
                            <td>@item.DestinationCountry</td>
                            <td class="fw-bold">₹@item.CoverageAmount.ToString("N0")</td>
                            <td>@item.TravelStartDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.TravelEndDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @{
                                    // Handle logic for Status Badge styling
                                    var statusClass = item.PolicyStatus switch
                                    {
                                        TravelInsuranceManagementSystem.Application.Models.PolicyStatus.ACTIVE => "status-active",
                                        TravelInsuranceManagementSystem.Application.Models.PolicyStatus.EXPIRED => "status-expired",
                                        TravelInsuranceManagementSystem.Application.Models.PolicyStatus.CANCELLED => "status-cancelled",
                                        _ => "status-expired"
                                    };
                                }
                                <span class="pill-payment @statusClass">@item.PolicyStatus</span>
                            </td>
                            <td class="text-center">
                                @{
                                    // Logic for Payment Status based on requested Enum values
                                    var paymentClass = "pill-pending";
                                    var paymentText = "Pending";

                                    if (item.PolicyStatus == TravelInsuranceManagementSystem.Application.Models.PolicyStatus.ACTIVE)
                                    {
                                        paymentClass = "pill-paid";
                                        paymentText = "Paid";
                                    }
                                    else if (item.PolicyStatus == TravelInsuranceManagementSystem.Application.Models.PolicyStatus.CANCELLED)
                                    {
                                        paymentClass = "pill-overdue";
                                        paymentText = "Refunded";
                                    }
                                    else if (item.PolicyStatus == TravelInsuranceManagementSystem.Application.Models.PolicyStatus.EXPIRED)
                                    {
                                        paymentClass = "pill-overdue";
                                        paymentText = "Closed";
                                    }
                                }
                                <span class="pill-payment @paymentClass">@paymentText</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox display-4 d-block mb-2"></i>
                            No policies found in the system.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Search Logic (Client-side filtering)
            $("#policySearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#policyTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}
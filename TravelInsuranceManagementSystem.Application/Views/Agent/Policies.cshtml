@{
    ViewData["Title"] = "Agent Policies";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

@section Styles {
    <style>
        .search-box {
            max-width: 400px;
            border-radius: 10px;
        }

        /* Table Layout & Spacing */
        .table thead th {
            padding: 1.25rem 1rem;
            white-space: nowrap;
            background-color: #f8fafc;
            color: #475569;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid #e2e8f0;
        }

        .table tbody td {
            padding: 1.5rem 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
        }

        /* Pill Badges for Payment Status */
        .pill-payment {
            display: inline-block;
            padding: 6px 16px;
            border-radius: 50px; /* Full pill shape */
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            min-width: 100px;
            text-align: center;
        }

        .pill-paid {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .pill-pending {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .pill-overdue {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        /* General Status Badges */
        .badge-active {
            background: #e0f2fe;
            color: #0369a1;
            padding: 5px 12px;
            border-radius: 6px;
            font-weight: 600;
        }

        .policy-id {
            font-weight: 700;
            color: #1e293b;
        }

        .plan-type {
            font-weight: 600;
            color: #2563eb;
        }
    </style>
}

<div class="mb-4">
    <h2 class="fw-bold m-0 text-navy">Policy Management</h2>
    <p class="text-muted">Review active policies and track payment installments.</p>
</div>

<div class="row align-items-center mb-4 g-3">
    <div class="col-md-6">
        <div class="input-group search-box shadow-sm">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
            <input type="text" id="policySearch" class="form-control border-start-0" placeholder="Search by Policy ID or Date...">
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0" id="policyTable">
            <thead>
                <tr>
                    <th class="ps-4">Policy ID</th>
                    <th>Plan Name</th>
                    <th>Premium Amount</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Policy Status</th>
                    <th class="text-center">Payment Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="ps-4 policy-id">P-01842</td>
                    <td class="plan-type">Silver Medical Plan</td>
                    <td class="fw-bold">₹12,500</td>
                    <td>2025-05-10</td>
                    <td>2026-05-09</td>
                    <td><span class="badge-active">Active</span></td>
                    <td class="text-center">
                        <span class="pill-payment pill-paid">Paid</span>
                    </td>
                </tr>
                <tr>
                    <td class="ps-4 policy-id">P-02231</td>
                    <td class="plan-type">Premium Travel Care</td>
                    <td class="fw-bold">₹4,200</td>
                    <td>2025-12-01</td>
                    <td>2026-12-01</td>
                    <td><span class="badge-active">Active</span></td>
                    <td class="text-center">
                        <span class="pill-payment pill-pending">Pending</span>
                    </td>
                </tr>
                <tr>
                    <td class="ps-4 policy-id">P-00985</td>
                    <td class="plan-type">Life Secure Plus</td>
                    <td class="fw-bold">₹28,000</td>
                    <td>2024-01-15</td>
                    <td>2025-01-15</td>
                    <td><span class="badge-active">Active</span></td>
                    <td class="text-center">
                        <span class="pill-payment pill-overdue">Overdue</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Search Logic
            $("#policySearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#policyTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}
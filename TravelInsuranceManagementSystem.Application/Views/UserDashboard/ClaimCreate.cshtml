@{
    ViewData["Title"] = "File New Claim";
    Layout = "~/Views/Shared/_UserDashboardLayout.cshtml";
}

@section Styles {
    <style>
        :root {
            --color-navy: #001f3d;
            --color-navy-hover: #00335f;
        }

        .panel {
            background: #fff;
            border: 1px solid #d7d7d7;
            border-radius: .75rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

        /* Form Labels & Required Marker */
        .form-label {
            font-weight: 600;
            color: #495057;
            font-size: 0.9rem;
        }

        .req::after {
            content: " *";
            color: #dc3545;
        }

        /* Input Styling */
        .form-control, .form-select {
            border-radius: .6rem;
            padding: 0.6rem 0.75rem;
            border: 1px solid #dee2e6;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--color-navy);
                box-shadow: 0 0 0 0.2rem rgba(0, 31, 61, 0.1);
            }

        /* Button Styling */
        .btn-navy {
            background-color: var(--color-navy);
            border-color: var(--color-navy);
            color: #fff;
            border-radius: .6rem;
            padding: .6rem 1.5rem;
            font-weight: 600;
        }

            .btn-navy:hover {
                background-color: var(--color-navy-hover);
                color: #fff;
            }

        .btn-outline-secondary {
            border-radius: .6rem;
            padding: .6rem 1.5rem;
        }

        /* File Upload Zone */
        .file-preview {
            border: 2px dashed #dee2e6;
            border-radius: .75rem;
            padding: 1.5rem;
            background: #f8f9fa;
            text-align: center;
            transition: all 0.3s ease;
        }

            .file-preview.active {
                border-color: var(--color-navy);
                background: #f0f4f8;
            }

        #imagePreview {
            max-height: 200px;
            border-radius: 0.5rem;
            margin-top: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
    </style>
}

<div class="container-fluid py-3">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h1 class="fw-bold m-0" style="color:var(--color-navy);">File New Claim</h1>
            <p class="text-muted small m-0">Please provide the incident details and supporting documents.</p>
        </div>
        <a asp-controller="UserDashboard" asp-action="Claims" class="btn btn-outline-secondary d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i> Back to Claims
        </a>
    </div>

    <div class="panel p-4">
        <form id="claimForm" novalidate enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label req">Policy Number</label>
                    <input id="policyNumber" class="form-control" placeholder="e.g., P01842" required />
                    <div class="invalid-feedback">Valid Policy ID is required.</div>
                </div>

                <div class="col-md-6">
                    <label class="form-label req">Insurance Plan</label>
                    <select id="plan" class="form-select" required>
                        <option value="">-- Select Plan --</option>
                        <option value="Gold Plus">Gold Plus</option>
                        <option value="Platinum">Platinum</option>
                        <option value="Silver Basic">Silver Basic</option>
                    </select>
                    <div class="invalid-feedback">Please select your plan.</div>
                </div>

                <div class="col-md-6">
                    <label class="form-label req">Incident Type</label>
                    <select id="claimType" class="form-select" required>
                        <option value="">-- Select Type --</option>
                        <option value="Medical Emergency">Medical Emergency</option>
                        <option value="Baggage Loss">Baggage Loss</option>
                        <option value="Trip Cancellation">Trip Cancellation</option>
                        <option value="Accidental Injury">Accidental Injury</option>
                    </select>
                    <div class="invalid-feedback">Please select the incident type.</div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Agent ID (If known)</label>
                    <input id="agentId" class="form-control" placeholder="e.g., AGT-772" />
                </div>

                <div class="col-md-6">
                    <label class="form-label req">Date of Incident</label>
                    <input id="incidentDate" class="form-control" type="date" required />
                    <div class="invalid-feedback">Incident date is required.</div>
                </div>

                <div class="col-md-6">
                    <label class="form-label req">Claim Amount (₹)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">₹</span>
                        <input id="amount" class="form-control" type="number" step="0.01" placeholder="0.00" required />
                    </div>
                    <div class="invalid-feedback">Please enter a valid amount.</div>
                </div>

                <div class="col-12">
                    <label class="form-label req">Description of Incident</label>
                    <textarea id="description" class="form-control" rows="4" placeholder="Briefly describe what happened..." required></textarea>
                    <div class="d-flex justify-content-between mt-1">
                        <div class="invalid-feedback">Description is required.</div>
                        <small id="descCounter" class="text-muted">0 / 1000</small>
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Supporting Documents</label>
                    <div class="file-preview" id="dropZone">
                        <i class="bi bi-cloud-arrow-up fs-2 text-muted"></i>
                        <p class="mb-2 mt-1">Drag and drop files here or click to upload</p>
                        <input id="document" type="file" class="form-control d-none" accept=".pdf,image/*" />
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="document.getElementById('document').click()">
                            Browse Files
                        </button>
                        <div id="fileInfo" class="mt-3 d-none">
                            <hr />
                            <div class="d-flex align-items-center justify-content-center gap-3">
                                <span id="fileName" class="fw-bold text-navy"></span>
                                <button type="button" id="clearFile" class="btn btn-sm btn-link text-danger p-0">Remove</button>
                            </div>
                            <div id="imageHolder"></div>
                        </div>
                    </div>
                    <small class="text-muted">Accepted formats: PDF, JPG, PNG (Max 10MB)</small>
                </div>
            </div>

            <div class="mt-5 d-flex gap-3">
                <button id="submitBtn" type="submit" class="btn btn-navy px-5">Submit Claim Request</button>
                <a asp-action="Claims" class="btn btn-outline-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const form = document.getElementById('claimForm');
            const submitBtn = document.getElementById('submitBtn');
            const fileInput = document.getElementById('document');
            const dropZone = document.getElementById('dropZone');
            const fileInfo = document.getElementById('fileInfo');
            const fileNameDisplay = document.getElementById('fileName');
            const imageHolder = document.getElementById('imageHolder');
            const desc = document.getElementById('description');
            const descCounter = document.getElementById('descCounter');

            // Set max date for incident to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('incidentDate').setAttribute('max', today);

            // Description Counter
            desc.addEventListener('input', () => {
                descCounter.textContent = `${desc.value.length} / 1000`;
            });

            // File Handling
            fileInput.addEventListener('change', function() {
                handleFiles(this.files);
            });

            function handleFiles(files) {
                if (files.length > 0) {
                    const file = files[0];
                    fileNameDisplay.textContent = file.name;
                    fileInfo.classList.remove('d-none');
                    imageHolder.innerHTML = '';

                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.id = 'imagePreview';
                            imageHolder.appendChild(img);
                        };
                        reader.readAsDataURL(file);
                    }
                }
            }

            document.getElementById('clearFile').addEventListener('click', () => {
                fileInput.value = '';
                fileInfo.classList.add('d-none');
                imageHolder.innerHTML = '';
            });

            // Drag and Drop Logic
            dropZone.addEventListener('dragover', (e) => { e.preventDefault(); dropZone.classList.add('active'); });
            dropZone.addEventListener('dragleave', () => dropZone.classList.remove('active'));
            dropZone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropZone.classList.remove('active');
                fileInput.files = e.dataTransfer.files;
                handleFiles(e.dataTransfer.files);
            });

            // Form Submission
            form.addEventListener('submit', (e) => {
                e.preventDefault();

                if (!form.checkValidity()) {
                    e.stopPropagation();
                    form.classList.add('was-validated');
                    return;
                }

                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';

                // Simulate API Call
                setTimeout(() => {
                    alert('Claim CLM-' + Math.floor(1000 + Math.random() * 9000) + ' has been filed successfully!');
                    window.location.href = '@Url.Action("Claims", "UserDashboard")';
                }, 1500);
            });
        })();
    </script>
}